<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:background="#DDDDDD" android:layout_height="match_parent" android:layout_width="match_parent" android:baselineAligned="true" android:orientation="vertical">
    <LinearLayout android:orientation="horizontal" android:baselineAligned="true" android:layout_gravity="center" android:layout_height="wrap_content" android:layout_weight="0" android:layout_marginTop="30px" android:layout_marginLeft="20px" android:layout_marginRight="20px" android:layout_width="match_parent">
	   <LinearLayout android:orientation="vertical" android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_weight="1">
	       <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/textView1" android:textAppearance="?android:attr/textAppearanceMedium" android:text="IP Address" android:textColor="#000000" android:layout_weight="1" android:layout_gravity="top" android:layout_marginLeft="5px"></TextView>
	       <EditText android:layout_height="wrap_content" android:id="@+id/txtIpAddress" android:inputType="text|number" android:layout_gravity="fill_horizontal" android:layout_weight="1" android:layout_width="match_parent"></EditText>
	   </LinearLayout>
	   <LinearLayout android:layout_width="wrap_content" android:orientation="vertical" android:layout_marginLeft="20px" android:layout_height="wrap_content" android:layout_weight=".35">
	       <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/TextView01" android:textAppearance="?android:attr/textAppearanceMedium" android:textColor="#000000" android:layout_weight="1" android:layout_gravity="top" android:text="Port" android:layout_marginLeft="5px"></TextView>
	       <EditText android:layout_height="wrap_content" android:id="@+id/txtPort" android:layout_weight="1" android:layout_gravity="top" android:inputType="text|number" android:layout_width="match_parent"/>
	   </LinearLayout>
    </LinearLayout>
    <Button android:layout_height="wrap_content" android:id="@+id/btnConnect" android:onClick="attemptConnect" android:layout_weight="0" android:layout_gravity="center_horizontal" android:layout_width="match_parent" android:text="Connect" android:layout_marginLeft="20px" android:layout_marginRight="20px"></Button>
</LinearLayout>
